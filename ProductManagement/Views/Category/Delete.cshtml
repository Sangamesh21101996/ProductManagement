@using ProductManagement.Models.Category
@*We are passing a Class as Values to the model *@
@model CategoryEntity

<form method="post">
    <input asp-for="CategoryId" hidden />
    <div class="broder p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-floating mb-3">
            <input asp-for="CategoryName" type="text" class="form-control" id="categoryName" placeholder="enter category name" disabled>
            <label asp-for="CategoryName"></label>

        </div>
        <div class="form-floating mb-3">
            <input asp-for="DisplayOrder" type="number" class="form-control" id="displayOrder" placeholder="enter display order" disabled>
            <label asp-for="DisplayOrder"></label>

        </div>
        <div class="row">
            <div class="col-6 ">
                <button type="submit" class="btn btn-danger form-control " data-bs-dismiss="alert"><i class="bi bi-trash3-fill"></i> Delete</button>

            </div>
            <div class="col-6 ">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
                    <i class="bi bi-backspace-fill"></i> Back
                </a>

            </div>

        </div>


    </div>

</form>

@*For delete we dont want validation bcz we disabled the fields*@