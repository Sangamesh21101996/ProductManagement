@using ProductManagement.Models.Category
@*We are passing a Class as Values to the model *@
@model CategoryEntity  

<form  method="post">
    <div class="broder p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-floating mb-3">
            <input asp-for="CategoryName" type="text" class="form-control" id="categoryName" placeholder="enter category name">
            <label asp-for="CategoryName"></label>
            <span asp-validation-for="CategoryName" class="text-danger"></span>
            
        </div>
        <div class="form-floating mb-3">
            <input asp-for="DisplayOrder" type="number" class="form-control" id="displayOrder" placeholder="enter display order">
            <label asp-for="DisplayOrder"></label>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>

        </div>
        <div class="row">
            <div class="col-6 ">
                    <button type="submit" class="btn btn-primary form-control " data-bs-dismiss="alert"><i class="bi bi-plus-circle"></i> Submit</button>

            </div>
            <div class="col-6 ">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
                    <i class="bi bi-backspace-fill"></i> Back
                </a>

            </div>

        </div>
       
        
    </div>
    
</form>


@section Scripts{
    @*This will include the jquery validations on form nut not custom validation*@
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}